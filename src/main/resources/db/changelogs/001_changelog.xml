<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
      xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet id="1" author="botenbreuk">
        <comment>Install unaccent module.</comment>
        <sql>
            CREATE EXTENSION unaccent;
        </sql>
    </changeSet>

    <changeSet id="2" author="botenbreuk">
        <createTable tableName="product">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="price" type="float">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="botenbreuk">
        <!-- Cannot create user table, because user is a reserved term of postgres -->
        <createTable tableName="app_user">
            <column name="id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_app_user_email" />
            </column>
            <column name="password" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="phone" type="varchar(16)">
                <constraints nullable="false" />
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="role" type="varchar(60)">
                <constraints nullable="false" />
            </column>
            <column name="actief" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>